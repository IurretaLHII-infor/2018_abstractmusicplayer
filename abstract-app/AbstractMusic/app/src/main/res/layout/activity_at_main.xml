<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <!--<TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Abstract Music"
            android:textSize="24dp"
            android:textColor="@color/colorAccent"
            android:layout_weight="8"/>-->

        <ImageView
            android:src="@drawable/logowithname"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_weight="8"/>


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Logout"
            android:textSize="10dp"
            android:layout_weight="2"
            android:id="@+id/mainLogout"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:layout_marginTop="20dp">

        <LinearLayout
            android:id="@+id/mainGenreLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Genre: "
                android:textColor="@color/colorWhite" />

            <TextView
                android:id="@+id/mainGenre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select a genre"
                android:textColor="@color/colorAccent" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/mainSubgenreLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:visibility="invisible">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Subgenre: "
                android:textColor="@color/colorWhite" />

            <TextView
                android:id="@+id/mainSubgenre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select a subgenre"
                android:textColor="@color/colorAccent" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/mainArtistLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:visibility="invisible">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Artist: "
                android:textColor="@color/colorWhite" />

            <TextView
                android:id="@+id/mainArtist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select an artist"
                android:textColor="@color/colorAccent" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/mainAlbumLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:visibility="invisible">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Album: "
                android:textColor="@color/colorWhite" />

            <TextView
                android:id="@+id/mainAlbum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select an album"
                android:textColor="@color/colorAccent" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/mainSongLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:visibility="invisible">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Song: "
                android:textColor="@color/colorWhite" />

            <TextView
                android:id="@+id/mainSong"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select a song"
                android:textColor="@color/colorAccent" />
        </LinearLayout>

    </LinearLayout>

    <ListView
        android:id="@+id/mainList"
        android:layout_gravity="center"
        android:layout_width="300dp"
        android:layout_height="200dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Recomendation: "
            android:textColor="@color/colorWhite" />

        <TextView
            android:id="@+id/mainRecomendation"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="No current recomendation"
            android:textColor="@color/colorWhite" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <Button
            android:id="@+id/mainPlay"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Play selection" />

        <Button
            android:id="@+id/mainPlayer"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Go to player" />

    </LinearLayout>


</LinearLayout>
